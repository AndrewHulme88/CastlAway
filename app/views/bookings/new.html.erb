<h1>Add new castle</h1>

<%= link_to("Home", root_path, class: "btn btn-gradient") %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Making a booking</h3>
        <%= simple_form_for [@castle, @booking] do |f| %>
          <%= f.date :to %>
          <%= f.date :from %>
          <%= f.input :total_price %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
