<div class="bookings-container">
   <% @bookings.each do |booking| %>
    <%= link_to user_castle_booking_path(booking.user, booking.castle, booking) do %>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag booking.castle.image, class: "img-fluid rounded-start"%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= booking.castle.name %></h5>
            <p class="card-text overflow-ellipsis"><%= booking.castle.description %></p>
            <p class="card-text"><small class="text-muted"><%= (booking.to - booking.from).to_i.abs %> nights</small></p>
            <%= link_to "Approve", "#", class: "btn btn-success approve-booking", data: { confirm: "Are you sure you want to approve this booking?" } %>
            <%= link_to "Deny", "#", class: "btn btn-danger deny-booking", data: { confirm: "Are you sure you want to deny this booking?" } %>
            <script>
              document.addEventListener('DOMContentLoaded', function() {
                document.querySelectorAll('.approve-booking').forEach(function(link) {
                  link.addEventListener('click', function(event) {
                    event.preventDefault();
                    var confirmMessage = this.getAttribute('data-confirm');
                    if (confirm(confirmMessage)) {
                      var form = document.createElement('form');
                      form.method = 'POST';
                      form.action = '<%= user_castle_approve_booking_path(booking.user, booking.castle, booking) %>';
                      var csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                      var csrfParam = document.querySelector('meta[name="csrf-param"]').getAttribute('content');
                      var hiddenField = document.createElement('input');
                      hiddenField.type = 'hidden';
                      hiddenField.name = csrfParam;
                      hiddenField.value = csrfToken;
                      form.appendChild(hiddenField);
                      document.body.appendChild(form);
                      form.submit();
                    }
                  });
                });

                document.querySelectorAll('.deny-booking').forEach(function(link) {
                  link.addEventListener('click', function(event) {
                    event.preventDefault();
                    var confirmMessage = this.getAttribute('data-confirm');
                    if (confirm(confirmMessage)) {
                      var form = document.createElement('form');
                      form.method = 'POST';
                      form.action = '<%= user_castle_deny_booking_path(booking.user, booking.castle, booking) %>';
                      var csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                      var csrfParam = document.querySelector('meta[name="csrf-param"]').getAttribute('content');
                      var hiddenField = document.createElement('input');
                      hiddenField.type = 'hidden';
                      hiddenField.name = csrfParam;
                      hiddenField.value = csrfToken;
                      form.appendChild(hiddenField);
                      document.body.appendChild(form);
                      form.submit();
                    }
                  });
                });
              });
</script>
          </div>
        </div>
      </div>
      </div>
      <% end %>
   <% end %>
</div>
<%= render "castles/footer" %>
