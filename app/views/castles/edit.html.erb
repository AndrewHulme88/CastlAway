<%= render "castles/navbar" %>

<h1>Edit castle</h1>

<%= link_to("Home", root_path, class: "btn btn-gradient") %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit castle listing</h3>
        <%= simple_form_for @castle, url: castle_path(@castle), method: :patch do |f| %>
          <%= f.input :name, placeholder: 'Camelot' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "castles/footer" %>
