<%= render "castles/navbar" %>

<h1>Add new castle</h1>

<%= link_to("Home", root_path, class: "btn btn-flat") %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new castle listing</h3>
        <%= simple_form_for @castle do |f| %>
          <%= f.input :name, placeholder: 'Camelot' %>
          <%= f.input :location, placeholder: 'France' %>
          <%= f.input :price, placeholder: '10000' %>
          <%= f.input :description, placeholder: 'An old fashioned, medievil style castle' %>
          <%= f.input :image, placeholder: 'image.jpg' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "castles/footer" %>
